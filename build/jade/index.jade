		#controls-wrapper
			.controls#visual-controls
				h2 Visual Controls
				.control__input.checkbox
					input(type="checkbox" id="video_toggle" name="videoToggle" value="videoToggle")
					label(for="video_toggle") Video

				.control__input.checkbox
					input(type="checkbox" id="photo_toggle" name="photoToggle" value="photoToggle")
					label(for="photo_toggle") Photos
				.control__input.slider
					input(type="range" id="video_speed" name="videoSpeed" list="video_tickmarks")
					label(for="video_speed") Video Playback Rate
					<datalist id="tickmarks">
					<option value="0" label="0%">
					<option value="10">
					<option value="20">
					<option value="30">
					<option value="40">
					<option value="50" label="100%">
					<option value="60">
					<option value="70">
					<option value="80">
					<option value="90">
					<option value="100" label="200%">
					</datalist>
				.control__input.slider
					input(type="range" id="photo_speed" class="reversed_input")
					label(for="photo_speed") Photo Refresh Rate

			.controls#audio-controls
				h2 Audio Controls
				.control__input.checkbox
					input(type="checkbox" id="music_toggle")
					label(for="music_toggle") Music

				.control__input.slider
					input(type="range" id="music_volume" min="0" max="0.5" step="0.05")
					label(for="music_volume") Music Volume

				.control__input.checkbox
					input(type="checkbox" id="ambience_toggle")
					label(for="ambience_toggle") Ambience

				.control__input.slider
					input(type="range" id="ambience_volume" min="0" max="1" step="0.1")
					label(for="ambience_volume") Ambience Volume

			.controls#text-controls
				h2 Text Controls
				.control__input.checkbox
					input(type="checkbox" id="text_toggle")
					label(for="text_toggle") Text

		audio#c-audio-player
		audio#c-music-player
		video(id="video" style="display: none;")

